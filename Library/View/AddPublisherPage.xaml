<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.AddPublisherPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <ViewCell>
                            <Button x:Name="AddBook" IsVisible="{Binding IsFullAdd}" Text="Add book" Command="{Binding AddBookCommand}"/>
                        </ViewCell>
                        <ViewCell>
                            <Button x:Name="RemoveBook" IsVisible="{Binding IsFullAdd}" Text="Remove book" Command="{Binding RemoveBookCommand}"/>
                        </ViewCell>
                        <EntryCell x:Name="Name" Label="Name: " Text="{Binding Name}"/>
                        <EntryCell x:Name="City" Label="City: " Text="{Binding City}"/>
                        <EntryCell Label="Book "/>
                        <ViewCell>
                            <ListView x:Name="BooksView" IsEnabled="{Binding IsFullAdd}" IsVisible="{Binding IsFullAdd}" ItemsSource="{Binding Author}" HasUnevenRows="True" ItemSelected="OnRemoveBookClicked">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <ViewCell.View>
                                                <Label Text="{Binding Title}"/>
                                            </ViewCell.View>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Add" Command="{Binding AddPublisherCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>