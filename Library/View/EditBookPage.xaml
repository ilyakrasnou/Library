<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Library;assembly=Library"
             xmlns:converterBool="clr-namespace:Library"
             x:Class="Library.EditBookPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--<local:BoolToRenameButtonText x:Key="boolToRename" />-->
            <converterBool:BoolToRenameButtonText x:Key="ConterterBool"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="AddAuthor" 
                    Text="Add author" 
                    Command="{Binding AddAuthorCommand}"/>
            <Button x:Name="RemoveAuthor" 
                    Text="Remove author" 
                    Command="{Binding RemoveAuthorCommand}"/>
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: "
                                   Text="{Binding NewTitle, Mode=TwoWay}" IsEnabled="{Binding CouldRename}"/>
                        <ViewCell>
                            <!--, Converter={StaticResource boolToRename}-->
                            <!--,  Converter={StaticResource ConterterBool}-->
                            <Button Text="{Binding Path = CouldRename}" Command="{Binding RenameBookCommand}" CommandParameter=""/>
                        </ViewCell>
                        <ViewCell>
                            <Label Text="Authors:"/>
                        </ViewCell>
                        <ViewCell>
                            <Button Text="{Binding Book.AuthorsNames}" 
                                    HorizontalOptions="StartAndExpand"
                                    BackgroundColor="White" 
                                    BorderColor="Gray"/>
                        </ViewCell>

                        <EntryCell x:Name="Tags" 
                                   Label="tags: "/>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.YearOfPublishing, Mode=TwoWay}"/>
                        <EntryCell x:Name="Publisher" Label="Publisher: "/>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>