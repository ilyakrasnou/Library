<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Library"
             xmlns:converterBool="clr-namespace:Library"
             x:Class="Library.EditBookPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToRenameButtonText x:Key="boolToRename" />
            <converterBool:BoolToRenameButtonText x:Key="ConterterBool"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: "
                                   Text="{Binding NewTitle, Mode=TwoWay}" IsEnabled="{Binding CouldRename}"/>
                        <ViewCell>
                            <!--, Converter={StaticResource boolToRename}-->
                            <!--,  Converter={StaticResource ConterterBool}-->
                            <Button Text="{Binding Rename, Mode=OneWay}" Command="{Binding RenameBookCommand}" CommandParameter=""/>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout>
                                <Image Source="{Binding Book.Cover}"/>
                                <Button Text="Pick cover" Command="{Binding PickCoverCommand}"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Authors:"
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button x:Name="AddAuthor" 
                                        Text="Add author" 
                                        Command="{Binding AddAuthorCommand}"
                                        VerticalOptions="Center"/>
                                <Button x:Name="RemoveAuthor" 
                                        Text="Remove author" 
                                        Command="{Binding RemoveAuthorCommand}"
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Entry Text="{Binding Book.AuthorsNames}" InputTransparent="True" />
                        </ViewCell>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.YearOfPublishing, Mode=TwoWay}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name="Publisher" Text="Publisher: "
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button Text="Add" Command="{Binding AddPublisherCommand}"
                                        VerticalOptions="Center"/>
                                <Button Text="Remove" Command="{Binding RemovePublisherCommand}" 
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Entry Text="{Binding Path=Book.Publisher.Name}" InputTransparent="True"/>
                        </ViewCell>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric"
                                   Text="{Binding Book.Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>