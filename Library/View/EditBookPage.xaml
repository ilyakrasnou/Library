<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.EditBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="AddAuthor" 
                    Text="Add author" 
                    Command="{Binding AddAuthorCommand}"
                    IsEnabled="{Binding IsEditable}"/>
            <Button x:Name="RemoveAuthor" 
                    Text="Remove author" 
                    Command="{Binding RemoveAuthorCommand}"
                    IsEnabled="{Binding IsEditable}"/>
            <TableView Intent="Data" BindingContext="{Binding Book}">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: " 
                                   Text="{Binding Title, Mode=TwoWay}"/>
                        <ViewCell>
                            <Label Text="Authors:"/>
                        </ViewCell>
                        <ViewCell>
                            <Button Text="{Binding AuthorsNames}" 
                                    HorizontalOptions="StartAndExpand"
                                    BackgroundColor="White" 
                                    BorderColor="Gray"/>
                        </ViewCell>

                        <EntryCell x:Name="Tags" 
                                   Label="tags: "/>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding YearOfPublishing, Mode=TwoWay}"/>
                        <EntryCell x:Name="Publisher" Label="Publisher: "/>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button Text="Add" IsEnabled="{Binding IsEditable}" 
                    Command="{Binding AddBookCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>