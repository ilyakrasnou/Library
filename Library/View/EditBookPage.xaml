<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Library;assembly=Library"
             xmlns:converterBool="clr-namespace:Library"
             x:Class="Library.EditBookPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--<local:BoolToRenameButtonText x:Key="boolToRename" />-->
            <converterBool:BoolToRenameButtonText x:Key="ConterterBool"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: "
                                   Text="{Binding NewTitle, Mode=TwoWay}" IsEnabled="{Binding CouldRename}"/>
                        <ViewCell>
                            <!--, Converter={StaticResource boolToRename}-->
                            <!--,  Converter={StaticResource ConterterBool}-->
                            <Button Text="{Binding Path = CouldRename}" Command="{Binding RenameBookCommand}" CommandParameter=""/>
                        </ViewCell>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Authors:"
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button x:Name="AddAuthor" 
                                        Text="Add author" 
                                        Command="{Binding AddAuthorCommand}"
                                        VerticalOptions="Center"/>
                                <Button x:Name="RemoveAuthor" 
                                        Text="Remove author" 
                                        Command="{Binding RemoveAuthorCommand}"
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Button Text="{Binding Book.AuthorsNames}" 
                                    HorizontalOptions="StartAndExpand"
                                    BackgroundColor="White" 
                                    BorderColor="Gray"/>
                        </ViewCell>

                        <EntryCell x:Name="Tags" 
                                   Label="tags: "/>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.YearOfPublishing, Mode=TwoWay}"/>
                        <EntryCell x:Name="Publisher" Label="Publisher: " Text="{Binding Path=Book.Publisher.Name}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Button Text="Add" Command="{Binding AddPublisherCommand}" HorizontalOptions="CenterAndExpand"/>
                                <Button Text="Remove" Command="{Binding RemovePublisherCommand}" HorizontalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>