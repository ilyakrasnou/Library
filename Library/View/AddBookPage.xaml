<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.AddBookPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: "
                                   Text="{Binding Book.Title, Mode=TwoWay}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Authors:"
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button x:Name="AddAuthor" 
                                        Text="Add author" 
                                        Command="{Binding AddAuthorCommand}"
                                        VerticalOptions="Center"/>
                                <Button x:Name="RemoveAuthor" 
                                        Text="Remove author" 
                                        Command="{Binding RemoveAuthorCommand}"
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Button Text="{Binding Book.AuthorsNames}" 
                                    HorizontalOptions="StartAndExpand"
                                    BackgroundColor="White" 
                                    BorderColor="Gray"
                                    IsVisible="{Binding IsFullAdd}"/>
                        </ViewCell>

                        <EntryCell x:Name="Tags" 
                                   Label="tags: "/>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.YearOfPublishing, Mode=TwoWay}"/>
                        <EntryCell x:Name="Publisher" Label="Publisher: " Text="{Binding Path=Book.Publisher.Name}"
                                   IsEnabled="{Binding IsFullAdd}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Button Text="Add" Command="{Binding AddPublisherCommand}"
                                        IsVisible="{Binding IsFullAdd}" 
                                        HorizontalOptions="CenterAndExpand"/>
                                <Button Text="Remove" Command="{Binding RemovePublisherCommand}"
                                        IsVisible="{Binding IsFullAdd}"
                                        HorizontalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout Orientation="Horizontal">
                <Button Text="Add" Command="{Binding AddBookCommand}" HorizontalOptions="CenterAndExpand"/>
                <Button Text="Back" Clicked="OnBackClicked" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>