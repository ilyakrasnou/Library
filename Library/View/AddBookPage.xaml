<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.AddBookPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Title" 
                                   Label="Title: "
                                   Text="{Binding Book.Title, Mode=TwoWay}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Authors:"
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button x:Name="AddAuthor" 
                                        Text="Add author" 
                                        IsVisible="{Binding IsFullAdd}"
                                        Command="{Binding AddAuthorCommand}"
                                        VerticalOptions="Center"/>
                                <Button x:Name="RemoveAuthor" 
                                        Text="Remove author" 
                                        IsVisible="{Binding IsFullAdd}"
                                        Command="{Binding RemoveAuthorCommand}"
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Entry Text="{Binding Book.AuthorsNames}" InputTransparent="True" />
                        </ViewCell>
                        <EntryCell x:Name="Year" Label="Year: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.YearOfPublishing, Mode=TwoWay}"/>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label x:Name="Publisher" Text="Publisher: "
                                       VerticalOptions="Center"
                                       HorizontalOptions="StartAndExpand"/>
                                <Button Text="Add" Command="{Binding AddPublisherCommand}"
                                        IsVisible="{Binding IsFullAdd}" 
                                        VerticalOptions="Center"/>
                                <Button Text="Remove" Command="{Binding RemovePublisherCommand}"
                                        IsVisible="{Binding IsFullAdd}"
                                        VerticalOptions="Center"/>
                            </StackLayout>
                        </ViewCell>
                        <ViewCell>
                            <Entry Text="{Binding Path=Book.Publisher.Name}"
                                   InputTransparent="True"/>
                        </ViewCell>
                        <EntryCell x:Name="Pages" Label="Pages: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.Pages, Mode=TwoWay}"/>
                        <EntryCell x:Name="ISBN" Label="ISBN: " 
                                   Keyboard="Numeric" 
                                   Text="{Binding Book.ISBN, Mode=TwoWay}"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout Orientation="Horizontal">
                <Button Text="Add" Command="{Binding AddBookCommand}" HorizontalOptions="FillAndExpand"/>
                <Button Text="Back" Clicked="OnBackClicked" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>