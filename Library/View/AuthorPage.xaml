<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.AuthorPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Command="{Binding EditAuthorCommand}" Order="Secondary"/>
        <ToolbarItem Text="Remove" Order="Secondary" Command="{Binding RemoveAuthorCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Author.FullName}"
                HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Grid.RowDefinitions>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>
                <Image Source="{Binding Author.Photo}"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Year"/>
                    <Label Text="{Binding Author.Birthday}"/>
                    <Label Text="Few words"/>

                </StackLayout>

            </Grid>
            <ListView x:Name="BooksView" Header="Books: " ItemsSource="{Binding Author.Books}" 
                          ItemSelected="BooksView_ItemSelected" 
                          HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Label Text="{Binding Title}"/>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--<StackLayout Orientation="Horizontal">
                <Button Text="Edit" 
                        Command="{Binding EditAuthorCommand}" HorizontalOptions="FillAndExpand"/>
                <Button Text="Remove" 
                        Command="{Binding RemoveAuthorCommand}" HorizontalOptions="FillAndExpand"/>
            </StackLayout>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>