<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.BookPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="Edit" Command="{Binding EditCommand}" Order="Secondary" />
        <ToolbarItem Text="Remove" Command="{Binding RemoveCommand}" Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="BookTitle" Text="{Binding Path=Book.Title}"
                HorizontalOptions ="CenterAndExpand" />
            <Grid>
                
                <Grid.RowDefinitions>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                </Grid.ColumnDefinitions>
                <Image Source="{Binding Book.Cover}" VerticalOptions="Start"/>
                <StackLayout Grid.Column="1">
                    <Label Text="Authors:"/>
                    <Button x:Name="Authors" HorizontalOptions="StartAndExpand" 
                    BackgroundColor="White" BorderColor="White" 
                    Text="{Binding Path=Book.AuthorsNames}" 
                    Command="{Binding AuthorsNamesCommand}"/>
                    <Label Text="Year"/>
                    <Label Text="{Binding Path=Book.YearOfPublishing}"/>
                    <Label Text="Publisher"/>
                    <Button x:Name="PublisherName" BackgroundColor="White" 
                    BorderColor="White" HorizontalOptions="StartAndExpand" 
                    Text="{Binding  Path=Book.Publisher.Name}" 
                    Command="{Binding PublisherCommand}" />
                    <Label Text="Pages"/>
                    <Label Text="{Binding Book.Pages}"/>
                    <Label Text="ISBN"/>
                    <Label Text="{Binding Book.ISBN}"/>
                    <!--<StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
                <Button x:Name="Add" Text="Edit" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"/>
                <Button x:Name="Remove" Text="Remove" Command="{Binding RemoveCommand}" HorizontalOptions="FillAndExpand"/>
            </StackLayout>-->
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>