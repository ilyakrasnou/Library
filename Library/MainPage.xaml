<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:converter="clr-namespace:Library.Converters"
            x:Class="Library.MainPage">
    <ContentPage Title="Books">
        <!--<ContentPage.ToolbarItems>
            <ToolbarItem Command="{Binding AddBookCommand}" Icon="{converter:ImageResource Source='Library.ImageResources.icon_add.png'}"/>
        </ContentPage.ToolbarItems>-->
        <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="AddBook" Command="{Binding AddBookCommand}"/>
            <ToolbarItem Text="Sort by" Command="{Binding SortBooksListCommand}"/>
        </ContentPage.ToolbarItems>
        <StackLayout>
            <SearchBar Text="{Binding SearchBook}"/>
            <ListView x:Name="BooksView" 
                      ItemsSource="{Binding BooksList}"
                      ItemSelected="BooksView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Title}"/>
                                <Label Text="{Binding AuthorsNames}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Authors">
        <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="AddAuthor" Text="Add author" Command="{Binding AddAuthorCommand}"/>
            <ToolbarItem Text="Sort by" Command="{Binding SortAuthorsListCommand}"/>
        </ContentPage.ToolbarItems>
        <StackLayout>
            <SearchBar Text="{Binding SearchAuthor}"/>
            <ListView x:Name="AuthorsView" 
                      ItemsSource="{Binding AuthorsList}"
                      ItemSelected="AuthorsView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding FullName}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Publishers">
        <ContentPage.ToolbarItems>
            <ToolbarItem x:Name="AddPublisher" Text="Add publisher" Command="{Binding AddPublisherCommand}"/>
            <ToolbarItem Text="Sort by" Command="{Binding SortPublishersListCommand}"/>
        </ContentPage.ToolbarItems>
        <StackLayout>
            <SearchBar Text="{Binding SearchPublisher}"/>
            <ListView x:Name="PublishersView"
                      ItemsSource="{Binding PublishersList}"
                      ItemSelected="PublishersView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding City}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>
</TabbedPage>
